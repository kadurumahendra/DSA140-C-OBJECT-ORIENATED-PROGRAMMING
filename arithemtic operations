#include<iostream>
using namespace std;
int main()
{
	int a,b,input;
	float div;
	cout<<"calculator\n\n1-add\n2-subtractor\n3-multiplication\n4-division\n";
	cout<<"ENTER THE OPERATION =>";
	cin>>input;
	cout<<"\nNUMBER1:";
	cin>>a;
	cout<<"\nNUMBER2:";
	cin>>b;
	switch(input)
	{
		case 1:
		cout<<a<<"+"<<b<<"="<<(a+b);
		break;
		case 2:
		cout<<a<<"-"<<b<<"="<<(a-b);
		break;
		case 3:
		cout<<a<<"x"<<b<<"="<<(a*b);
		break;
	    case 4:
	    div=(float)a/(float)b;
	   	cout<<a<<"/"<<b<<"="<<div;
		break;
		default:
		cout<<"ENTERED OPERATOION IS INAVALID...!!";
			}
		}
